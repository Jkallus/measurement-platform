<UserControl x:Class="MeasurementUI.Controls.Views.PositionReadoutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeasurementUI.Controls.Views"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300"
             DataContext="{Binding PositionReadoutControlViewModel}">
    <Grid>
        <ListView ItemsSource="{Binding Items}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Field}" Width="150">
                        <GridViewColumnHeader Content="Field"/>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Value, IsAsync=True}" Width="150">
                        <GridViewColumnHeader Content="Value"/>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
