<UserControl x:Class="MeasurementUI.Controls.Views.ComponentState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeasurementUI.Controls.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300" Height="50" Width="300"
             x:Name="root">
    <Grid>
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Left">
            <Ellipse Height="15" Width="15" Fill="Green" Margin="3 0 0 0"/>
            <TextBlock x:Name="ComponentNameText" Text="{Binding ComponentName, ElementName=root}" Margin="5 0 0 0"/>
            <TextBlock Text=":" Margin="2 0 0 0"/>
            <TextBlock x:Name="ComponentStatusText" Text="{Binding ComponentStatus, ElementName=root}" Margin="10 0 0 0"/>
        </WrapPanel>
    </Grid>
</UserControl>
