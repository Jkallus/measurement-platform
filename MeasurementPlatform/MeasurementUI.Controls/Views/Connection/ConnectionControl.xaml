<UserControl x:Class="MeasurementUI.Controls.Views.ConnectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeasurementUI.Controls.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400" Height="300" Width="400">
    <Grid>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Connect to System" Width="150" Height="40" HorizontalAlignment="Center" Margin="10"
                    Command="{Binding ConnectCommand}"/>
            <Button Content="Disconnect" Width="150" Height="40" HorizontalAlignment="Center" Margin="10"
                    Command="{Binding DisconnectCommand}"/>
        </WrapPanel>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 20 0 0">
            <local:ComponentState ComponentName="Motion Controller" ComponentStatus="{Binding MotionControllerStatus}"/>
        </StackPanel>
        

    </Grid>
</UserControl>
