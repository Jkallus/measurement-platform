{
  "LocalSettingsOptions": {
    "ApplicationDataFolder": "MeasurementApp/ApplicationData",
    "LocalSettingsFile": "LocalSettings.json"
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console" 
      },
      {
        "Name": "File",
        "Args": {
          "path": "%MEASUREAPP_DIR%\\logs\\txt\\log.txt",
          "outputTemplate": "[{Level}] {Timestamp:G} ({SourceContext}) {Message}{NewLine:1}{Exception:1}",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "%MEASUREAPP_DIR%\\logs\\json\\log.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "c:\\temp\\logs\\log.txt",
          "outputTemplate": "[{Level}] {Timestamp:G} ({SourceContext}) {Message}{NewLine:1}{Exception:1}",
        }
      }
    ]
  }
}